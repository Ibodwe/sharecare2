<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".services.servicesService.RemainingTask">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B3CBE6"
        android:gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:id="@+id/Accepted"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextline"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Accepted \n Task"
            android:textSize="20dp"
            android:textStyle="bold"
            >
        </TextView>

        <TextView
            android:id="@+id/pending"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/edittextline"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="pending \n Tasks"
            android:textSize="20dp"
            android:textStyle="bold"
            >
        </TextView>
        <TextView
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/edittextline"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="create \n Tasks"
            android:textSize="20dp"
            android:textStyle="bold"
            >
        </TextView>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/RemainMain"
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:layout_marginTop="25dp">

    </FrameLayout>

</LinearLayout>